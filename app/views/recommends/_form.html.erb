<%= form_with(model: @recommend, local: true, url: recommend_choose_new_or_edit) do |f| %>
  <div class='form_group'>
    <%= f.label :name %>
    <%= f.text_field :name, { class: 'form-control', placeholder: 'Group Name' } %>
  </div>

  <div class='form_group'>
    <%= f.label :summary %>
    <%= f.text_field :summary, { class: 'form-control', placeholder: 'Summary' } %>
  </div>
  <br />

  <h4>Book registration form</h4>
    <%= f.fields_for :books do |b| %>
      <div class="form-row align-items-center">
        <div class='form-group col-auto'>
          <%= b.label :title, { class: 'sr-only' } %>
          <%= b.text_field :title, { class: 'form-control mb-2', placeholder: 'title' } %>
        </div>
        <div class="form-group col-auto">
          <%= b.label :publish_on, "Publish date" %>
          <%= b.date_select :publish_on, {}, {class: 'form-control b-date py-'} %>
        </div>
        <div class="form-group col-sm-1">
          <%= b.label :sheets, "pages", { class: 'sr-only' } %>
          <%= b.number_field :sheets, { min: 0, max: 10000000, step: 1, class: "form-control", placeholder: 'pages' } %>
        </div>
        <div class="form-group col-sm-1">
          <%= b.label :price, "Price", { class: 'sr-only' } %>
          <%= b.number_field :price, { min: 1, max: 10000000, step: 1, class: "form-control", placeholder: 'price' } %>
        </div>
        <div class="form-group col-auto">
            <%= b.label :image, "file", { class: 'sr-only' } %>
            <%= b.file_field :image, { class: 'form-control-file' } %>
        </div>
      </div>
    <% end %>

  <%= f.submit %>
<% end %>
