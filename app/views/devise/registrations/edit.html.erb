
<div class="sessions_container mx-auto">
  <div class="card card-sign-up">
    <div class="card-header">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
    </div>

    <div class="card-body">

      <% unless current_user.provider? %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <% unless resource.errors.empty? %>
            <script>
              <% resource.errors.full_messages.each do |msg| %>
                toastr.error('<%= msg %>');
              <% end %>
            </script>
          <% end %>

          <div class="form-group input-group">
            <div class="input-group-prepend align-items-center col-md-3">
              <%= f.label :name, { class: 'control-label' } %>
            </div>
            <%= f.text_field :name, { autocomplete: 'name', class: 'form-control col-md-9', placeholder: 'name' } %>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend align-items-center col-md-3">
              <%= f.label :email %><br />
            </div>
            <%= f.email_field :email, { autocomplate: 'email', class: 'form-control col-md-9', placeholder: 'Email Address', required: true } %>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend align-items-center col-md-3">
              <%= f.label :password %>
            </div>
            <%= f.password_field :password, { autocomplete: 'new-password', class: 'form-control col-md-9' , autofocus: true, placeholder: 'Password', required: true }%>
            <div class="col-md-12">
              <i>(leave blank if you don't want to change it)</i><br />
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend align-items-center col-md-3">
              <%= f.label :password_confirmation, 'Password' %><br />
            </div>
            <%= f.password_field :password_confirmation, { autocomplete: "new-password", class: 'form-control col-md-9', placeholder: 'Confrim Password'} %>
            <div class="col-md-12">
              <em>(confirm password)</em>
            </div>
          </div>

          <div class="form-group input-group">
            <div class="input-group-prepend align-items-center col-md-3">
              <%= f.label :current_password %>
            </div>
            <%= f.password_field :current_password, { autocomplete: "current-password", class: 'form-control col-md-9', placeholder: 'Current Password'}%>
            <div class="col-md-12">
              <i>(we need your current password to confirm your changes)</i><br />
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Update" %>
          </div>
          <br />
        <% end %>
      <% end %>
      <div class="card-footer">
        <h4>Cancel my account</h4>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
