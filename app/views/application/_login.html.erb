<!-- logo image-->
<%= link_to image_tag(image_url('logo.png'), :size => '150x50'), root_path, { class: "nav-brand" } %>

<!-- nav -->
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNavDropdown">

  <!-- landing page internal link-->
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <%= link_to "About", root_path(anchor: :about), { class: "nav-link" } %>
    </li>
    <li class="nav-item">
      <%= link_to "Scene", root_path(anchor: :scene), { class: "nav-link" } %>
    </li>
  </ul>

  <!-- home link -->
  <ul class="navbar-nav">

    <!-- function link -->
    <li class="nav-item">
      <%= link_to books_path, { class: 'nav-link' } do %>
        <%= icon('fas', 'home') %>
        <%= t('views.title.books') %>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to recommends_path, { class: 'nav-link' } do %>
        <%= icon('fab', 'stack-overflow') %>
        <%= t('views.title.book_list') %>
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to user_path(current_user), { class: 'nav-link' } do %>
        <%= icon('fas', 'heart') %>
        <%= t('views.title.favorite') %>
      <% end %>
    </li>

    <!-- user setting -->
    <li class="nav-item dropdown">
      <%= link_to '#', { class: "strong nav-link dropdown-toggle", id: "navbarDropdown", role: "button", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } } do %>
        <%= icon('far', 'user') %>
        <%= current_user.safe_name %>
      <% end %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to t('views.button.user_info'), user_path(current_user.id), { class: "dropdown-item" } %>
        <%= link_to t('views.button.logout'), destroy_user_session_path, { method: :delete, class: 'dropdown-item' } %>
      </div>
    </li>

  </ul>
</div>
