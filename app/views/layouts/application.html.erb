<!DOCTYPE html>
<html>
  <head>
    <title>Tundocker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header> 
      <nav class="navbar navbar-expand-lg navbar-light pt-1 pb-2 bg-white no-padding">
        <div class="container">
          <% if user_signed_in? %>
            <%= render partial: "login" %>
          <% else %>
            <%= render partial: "landing" %>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <div class="yield-wrapper d-flex flex-column">
      <%= yield %>
    </div>

    <footer class="mt-auto">
      <div class="container pt-5 pb-2">
        <div class="col-md-12">
          <ul class="share-icons p-0 mb-0">
            <li>
              <%= link_to icon('fab', 'twitter'), "https://twitter.com/symphogeek", { class: 'nav-item' } %>
            </li>
            <li>
              <%= link_to icon('fab', 'github-alt'), "https://github.com/ponpppher", { class: 'text-muted' } %>
            </li>
          </ul>
          <p class="mb-0 py-2">
            Made by ponpher 2019 all rights reserved<br />
            Logo made with <a href="https://www.designevo.com/en/" title="Free Online Logo Maker">DesignEvo</a>
          </p>
        </div>
      </div>
    </footer>

    <!-- フラッシュメッセージ表示 -->
    <% flash.each do |type, msg| %>
      <% type = 'info' if type == 'notice' %>
      <% type = 'error' if type == 'alert' %>
      <script>
        toastr.options = {
          "closeButton": true,
          "positionClass": "toast-bottom-left",
          "preventDuplicates": false,
          "timeOut": "2000",
        }
        toastr['<%= type %>']('<%= msg %>')
      </script>
    <% end %>
  </body>
</html>
